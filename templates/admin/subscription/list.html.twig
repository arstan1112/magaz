{% extends 'admin/base.html.twig' %}

{% block title %}Admin Panel{% endblock %}

{% block body %}
    <div class="float-right">
        <a href="{{ path('products.list') }}"><button class="btn btn-success">Get new subscription</button></a>
    </div>
    <br>
    <br>
    <br>
    {% for subscription in subscriptions %}
        <ul class="list-group">
            <li class="list-group-item list-group-item-light">
                <div class="float-left">Subsciption name: <strong>{{ subscription.nickname }}</strong></div>
                <br>
                <div class="float-left">Interval: every <strong>{{ subscription.regularity }}</strong></div>
                <div class="float-right">
                    <a href="#"><button class="btn btn-danger">Cancel</button></a>
                </div>
            </li>
        </ul>
    {% endfor %}
{% endblock %}
